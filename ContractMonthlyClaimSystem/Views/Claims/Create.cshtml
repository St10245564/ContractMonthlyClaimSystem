@model ContractMonthlyClaimSystem.Models.CreateClaimViewModel

@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Submit Your Monthly Claim</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data" id="claimForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ModuleCode" class="form-label">Module Code</label>
                                    <input asp-for="ModuleCode" class="form-control"
                                           placeholder="Enter module code (e.g., PROG6212)" required />
                                    <span asp-validation-for="ModuleCode" class="text-danger"></span>
                                    <small class="form-text text-muted">Enter the module code you worked on</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClaimDate" class="form-label">Claim Date</label>
                                    <input asp-for="ClaimDate" class="form-control" type="date" required />
                                    <span asp-validation-for="ClaimDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                                    <input asp-for="HoursWorked" class="form-control" type="number" step="0.5" min="0.5" max="100" required />
                                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                    <small class="form-text text-muted">Enter hours worked (0.5 to 100)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HourlyRate" class="form-label">Hourly Rate (R)</label>
                                    <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0.01" max="1000" required />
                                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                    <small class="form-text text-muted">Enter your hourly rate</small>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="form-label">Description of Work</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the work you did..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label">Supporting Document (Optional)</label>
                                    <input type="file" name="supportingDocument" class="form-control"
                                           accept=".pdf,.docx,.xlsx,.jpg,.png" />
                                    <small class="form-text text-muted">
                                        Allowed formats: PDF, DOCX, XLSX, JPG, PNG (Max 10MB)
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Claim Summary</h6>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <strong>Hours:</strong> <span id="summaryHours">0</span>
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Rate:</strong> R <span id="summaryRate">0.00</span>
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Total:</strong> R <span id="summaryTotal">0.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg">Submit Claim</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to My Claims</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Simple and reliable calculation function
        function calculateTotal() {
            try {
                // Get input values
                const hours = document.getElementById('HoursWorked').value || '0';
                const rate = document.getElementById('HourlyRate').value || '0';

                // Convert to numbers
                const hoursNum = parseFloat(hours);
                const rateNum = parseFloat(rate);

                // Update display
                document.getElementById('summaryHours').textContent = hoursNum.toFixed(1);
                document.getElementById('summaryRate').textContent = rateNum.toFixed(2);

                // Calculate total
                const total = hoursNum * rateNum;
                document.getElementById('summaryTotal').textContent = total.toFixed(2);
            } catch (error) {
                console.error('Calculation error:', error);
            }
        }

        // Set up event listeners when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Get input elements
            const hoursInput = document.getElementById('HoursWorked');
            const rateInput = document.getElementById('HourlyRate');

            // Add event listeners
            if (hoursInput) {
                hoursInput.addEventListener('input', calculateTotal);
            }
            if (rateInput) {
                rateInput.addEventListener('input', calculateTotal);
            }

            // Initial calculation
            calculateTotal();
        });
    </script>
}