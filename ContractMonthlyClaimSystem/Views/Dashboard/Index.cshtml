@model ContractMonthlyClaimSystem.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var isLecturer = Model.UserType == "Lecturer";
    var isAdmin = Model.UserType == "Coordinator" || Model.UserType == "Manager";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-card bg-gradient-primary text-white rounded-3 p-4 shadow">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h2 mb-1">Welcome back, @Model.UserName!</h1>
                        <p class="mb-0 opacity-75">
                            @Model.CurrentDate.ToString("dddd, MMMM dd, yyyy") |
                            <span class="badge bg-light text-dark">@Model.UserType</span>
                        </p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <i class="fas fa-chart-line fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        @if (isLecturer)
        {
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Claims
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Pending Claims
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Approved Claims
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApprovedClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total Earnings
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">R @Model.TotalAmount.ToString("N2")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Claims
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Pending Review
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Approved
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApprovedClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Rejected
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RejectedClaims</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total Lecturers
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalLecturers</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-dark shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                    Total Processed
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">R @Model.TotalAmount.ToString("N2")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Charts and Recent Activity -->
    <div class="row">
        <!-- Charts Section -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        @(isLecturer ? "My Claims Overview" : "System Overview") - Last 6 Months
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="claimsChart" width="100%" height="40"></canvas>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Claims Status Distribution</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-pie pt-4 pb-2">
                                <canvas id="statusPieChart" width="100%" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                @if (isAdmin)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Top Lecturers</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm table-borderless">
                                        <thead>
                                            <tr>
                                                <th>Lecturer</th>
                                                <th class="text-end">Claims</th>
                                                <th class="text-end">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var lecturer in Model.TopLecturers)
                                            {
                                                <tr>
                                                    <td>@lecturer.LecturerName</td>
                                                    <td class="text-end">@lecturer.TotalClaims</td>
                                                    <td class="text-end">@lecturer.FormattedTotalAmount</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        @(isAdmin ? "Claims Pending Review" : "Recent Claims")
                    </h6>
                    <a href="@(isAdmin ? "/Claims/Pending" : "/Claims/Index")" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentClaims.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var claim in Model.RecentClaims)
                            {
                                <div class="list-group-item px-0 py-3">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@claim.ModuleCode</h6>
                                        <small class="text-muted">@claim.FormattedDate</small>
                                    </div>
                                    <p class="mb-1">
                                        <span class="badge bg-@claim.StatusBadgeClass">@claim.Status</span>
                                        @if (isAdmin)
                                        {
                                            <span class="text-muted">by @claim.LecturerName</span>
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@claim.HoursWorked hours</small>
                                        <strong>@claim.FormattedAmount</strong>
                                    </div>
                                    <div class="mt-2">
                                        <a href="/Claims/Details/@claim.ClaimId" class="btn btn-sm btn-outline-primary">View</a>
                                        @if (isAdmin && claim.Status == "Pending")
                                        {
                                            <a href="/Claims/Pending" class="btn btn-sm btn-outline-success">Review</a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-gray-300 mb-3"></i>
                            <p class="text-muted">No claims found</p>
                            @if (isLecturer)
                            {
                                <a href="/Claims/Create" class="btn btn-primary">Submit Your First Claim</a>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (isLecturer)
                        {
                            <a href="/Claims/Create" class="btn btn-success btn-lg">
                                <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                            </a>
                            <a href="/Claims/Index" class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>View My Claims
                            </a>
                        }
                        else
                        {
                            <a href="/Claims/Pending" class="btn btn-warning btn-lg">
                                <i class="fas fa-tasks me-2"></i>Review Pending Claims
                                @if (Model.PendingClaims > 0)
                                {
                                    <span class="badge bg-danger ms-2">@Model.PendingClaims</span>
                                }
                            </a>
                            <a href="/Claims/Index" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i>View All Claims
                            </a>
                        }
                        <a href="/Account/Logout" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .welcome-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }

        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }

        .border-left-danger {
            border-left: 0.25rem solid #e74a3b !important;
        }

        .border-left-dark {
            border-left: 0.25rem solid #5a5c69 !important;
        }

        .chart-area {
            position: relative;
            height: 20rem;
            width: 100%;
        }

        .chart-pie {
            position: relative;
            height: 15rem;
            width: 100%;
        }

        .list-group-item {
            border: none;
            border-bottom: 1px solid #e3e6f0;
        }

            .list-group-item:last-child {
                border-bottom: none;
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Claims Chart
        var ctx = document.getElementById('claimsChart').getContext('2d');
        var claimsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    label: 'Number of Claims',
                    data: [],
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.05)',
                    pointBackgroundColor: '#4e73df',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#4e73df',
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'Total Amount (R)',
                    data: [],
                    borderColor: '#1cc88a',
                    backgroundColor: 'rgba(28, 200, 138, 0.05)',
                    pointBackgroundColor: '#1cc88a',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#1cc88a',
                    fill: true,
                    tension: 0.4,
                    yAxisID: 'y1'
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            borderDash: [2]
                        }
                    },
                    y1: {
                        beginAtZero: true,
                        position: 'right',
                        grid: {
                            drawOnChartArea: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });

        // Status Pie Chart
        var pieCtx = document.getElementById('statusPieChart').getContext('2d');
        var statusPieChart = new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: ['Pending', 'Approved', 'Rejected'],
                datasets: [{
                    data: [@Model.PendingClaims, @Model.ApprovedClaims, @Model.RejectedClaims],
                    backgroundColor: ['#f6c23e', '#1cc88a', '#e74a3b'],
                    hoverBackgroundColor: ['#f8d36c', '#3dd5a4', '#ea6c5d'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            },
        });

        // Load chart data
        async function loadChartData() {
            try {
                const response = await fetch('/Dashboard/GetMonthlyClaimData');
                const data = await response.json();

                claimsChart.data.labels = data.map(item => item.Month);
                claimsChart.data.datasets[0].data = data.map(item => item.ClaimsCount);
                claimsChart.data.datasets[1].data = data.map(item => item.TotalAmount);
                claimsChart.update();
            } catch (error) {
                console.error('Error loading chart data:', error);
            }
        }

        // Initialize charts
        document.addEventListener('DOMContentLoaded', function () {
            loadChartData();
        });
    </script>
}